<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_margin="12dp"
    android:layout_height="wrap_content"

    android:background="@drawable/border_for_dependence_item"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/list_item_document_special_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="4dp"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textStyle="bold|italic"

        tools:text="Специальность"/>

    <TextView
        android:id="@+id/list_item_dependence_education_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/list_item_document_special_text_view"
        android:padding="4dp"
        android:layout_marginStart="8dp"
        tools:text="Образование"/>

    <TextView
        android:id="@+id/list_item_dependence_scan_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"

        android:layout_below="@id/list_item_dependence_education_text_view"
        android:padding="4dp"
        tools:text="Скан документа"/>



</RelativeLayout>