<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <item >
                <shape
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:shape="rectangle" >
                    <corners android:radius="15dp"/>
                    <gradient android:startColor="@color/colorGradientStart2"
                        android:endColor="@color/colorGradientStart2_2" android:type="radial"
                        android:gradientRadius="250dp"/>

                </shape>
            </item>
            <item android:bottom="6dp" android:right="4dp" android:top="1dp">
                <shape
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:shape="rectangle" >
                    <gradient android:startColor="@color/colorGradientEnd2_2"
                        android:endColor="@color/colorGradientStart2" android:type="radial"
                        android:gradientRadius="250dp"/>

                    <corners android:radius="15dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="5dp"
                    android:shape="rectangle" >

                    <gradient android:startColor="@color/colorGradientStart3"
                        android:endColor="@color/colorGradientStart3_2" android:type="radial"
                        android:gradientRadius="250dp"/>
                    <corners android:radius="15dp"/>

                </shape>
            </item>
            <item android:bottom="3dp" android:right="1dp">
                <shape
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="5dp"
                    android:shape="rectangle" >

                    <gradient android:startColor="@color/colorGradientEnd3_2"
                        android:endColor="@color/colorGradientStart3" android:type="radial"
                        android:gradientRadius="250dp"/>

                    <corners android:radius="15dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>